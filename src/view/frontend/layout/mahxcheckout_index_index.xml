<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      layout="checkout"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="mahxcheckout_scripts" />

    <head>
        <!-- Remove Luma styles; If you want to use tailwind styling in luma, uncomment below styles -->
<!--        <remove src="css/styles-m.css" />-->
<!--        <remove src="css/styles-l.css" />-->
<!--        <remove src="css/print.css" />-->
<!--        <remove src="mage/calendar.css"/>-->
<!--        <remove src="jquery/uppy/dist/uppy-custom.css"/>-->

        <!-- Our essential css and js libs -->
        <css defer="defer" src="MageHx_MahxCheckout::css/luma-checkout-overrides.css" />
        <script src="MageHx_MahxCheckout::js/lib/htmx.js" crossorigin="anonymous" />
        <script src="MageHx_MahxCheckout::js/mahx/build/checkout.iife.js" crossorigin="anonymous" />
    </head>
    <body>
        <referenceContainer name="content" htmlTag="div" htmlClass="relative">
            <block cacheable="false" name="checkout.main" template="MageHx_MahxCheckout::main.phtml"/>
            <container name="checkout.scripts" />
            <block name="checkout.page.loader" template="MageHx_MahxCheckout::ui/page/loader.phtml" />
        </referenceContainer>

        <move element="checkout.main.content" destination="checkout.main" />

        <referenceBlock name="logo" template="MageHx_MahxCheckout::html/header/logo.phtml" />

        <referenceBlock name="page.main.title" remove="true" />
    </body>
</page>
